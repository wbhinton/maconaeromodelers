---
import Layout from '../layouts/Layout.astro';

// ---------------------------------------------------------
// CONFIGURATION
const ACCESS_KEY = "333fe4c7-fbab-487c-9a25-691c89381913";
// ---------------------------------------------------------
---

<Layout title="Contact Us">
  
  <div class="relative bg-gray-900 text-white py-20 px-4 rounded-b-3xl md:rounded-2xl mb-12 shadow-xl overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img 
        src={`${import.meta.env.BASE_URL}assets/images/hero1.jpg`} 
        alt="Contact Macon Aero Modelers" 
        class="w-full h-full object-cover opacity-40" 
      />
      <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent to-transparent"></div>
    </div>
    
    <div class="relative z-10 text-center max-w-4xl mx-auto mt-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 drop-shadow-lg">Get in Touch</h1>
      <p class="text-xl md:text-2xl text-gray-200 max-w-2xl mx-auto drop-shadow-md">
         Have questions about membership, our flying field, or upcoming events? 
      </p>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 mb-16">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
      
      <div class="bg-white rounded-2xl shadow-md border border-gray-100 p-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Club Information</h2>
        
        <div class="space-y-6">
          <div class="flex items-start gap-4">
            <div class="bg-blue-50 p-3 rounded-lg text-primary shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-gray-900">OTX AeroDrome</h3>
              <p class="text-gray-600 mt-1">
                516 Tessentee Road<br>
                Otto, NC 28763
              </p>
              <div class="mt-2 text-sm text-gray-500 font-mono bg-gray-50 inline-block px-2 py-1 rounded border border-gray-200">
                35°03'46.9"N 83°22'59.9"W
              </div>
              <br>
              <a 
                href="https://www.google.com/maps/search/?api=1&query=35.063028,-83.383306" 
                target="_blank"
                class="inline-flex items-center gap-1 text-primary hover:text-primary-hover mt-3 text-sm font-medium"
              >
                Get Directions →
              </a>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="bg-blue-50 p-3 rounded-lg text-primary shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-gray-900">Email Us</h3>
              <p class="mt-1">
                <a 
                  href="mailto:&#109;&#97;&#99;&#111;&#110;&#97;&#101;&#114;&#111;&#109;&#111;&#100;&#101;&#108;&#101;&#114;&#115;&#64;&#103;&#109;&#97;&#105;&#108;&#46;&#99;&#111;&#109;" 
                  class="text-gray-600 hover:text-primary transition-colors"
                >
                  &#109;&#97;&#99;&#111;&#110;&#97;&#101;&#114;&#111;&#109;&#111;&#100;&#101;&#108;&#101;&#114;&#115;&#64;&#103;&#109;&#97;&#105;&#108;&#46;&#99;&#111;&#109;
                </a>
              </p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="bg-blue-50 p-3 rounded-lg text-primary shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-gray-900">Flying Hours</h3>
              <p class="text-gray-600 mt-1">
                Open to members 7 days a week.<br>
                Spectators welcome on weekends!
              </p>
            </div>
          </div>
        </div>

        <div class="mt-8 rounded-xl overflow-hidden shadow-sm border border-gray-200 h-64 bg-gray-100">
           <iframe 
            src="https://maps.google.com/maps?q=35.063028,-83.383306&t=k&z=17&ie=UTF8&iwloc=&output=embed"
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade">
          </iframe>
        </div>
      </div>

      <div class="bg-gray-50 rounded-2xl p-8 border border-gray-200">
        <form 
          action="https://api.web3forms.com/submit" 
          method="POST"
          class="space-y-6"
        >
          <input type="hidden" name="access_key" value={ACCESS_KEY}>
          
          <input type="hidden" name="redirect" value="https://maconaeromodelers.com/contact-success">
          
          <input type="checkbox" name="botcheck" class="hidden" style="display: none;">

          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
            <input 
              type="text" 
              name="name" 
              id="name" 
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all"
              placeholder="John Doe"
            >
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
            <input 
              type="email" 
              name="email" 
              id="email" 
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all"
              placeholder="john@example.com"
            >
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
            <textarea 
              name="message" 
              id="message" 
              rows="5" 
              required
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all resize-y"
              placeholder="How can we help you?"
            ></textarea>
          </div>

          <button 
            type="submit" 
            class="w-full bg-primary text-white font-bold py-3 px-8 rounded-lg hover:bg-primary-hover hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200"
          >
            Send Message
          </button>

          <p class="text-xs text-gray-500 text-center mt-4">
            Protected by Web3Forms. No spam guaranteed.
          </p>
        </form>
      </div>

    </div>
  </div>
</Layout>