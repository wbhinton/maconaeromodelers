---
import Layout from '../layouts/Layout.astro';
import FieldWeather from '../components/FieldWeather.astro';
import { Image } from 'astro:assets';

// Placeholder for a field image - you can update this path later
// using one of your gallery images would be perfect here
import fieldImage from '../assets/gallery/2025-12-Test Gallery/rc-plane-5160638_1280.jpg'; 
---

<Layout title="The Field - OTX AeroDrome">
  
  <div class="relative bg-gray-900 text-white rounded-2xl overflow-hidden mb-12 shadow-xl">
    <div class="absolute inset-0 opacity-40">
       <div class="w-full h-full bg-gradient-to-r from-gray-900 to-blue-900"></div>
    </div>
    
    <div class="relative z-10 px-8 py-20 md:py-32 text-center max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 tracking-tight">OTX AeroDrome</h1>
      <p class="text-xl md:text-2xl text-gray-200 max-w-2xl mx-auto">
        One of the premier radio-controlled flying sites in Western North Carolina.
      </p>
    </div>
  </div>

  <div class="mb-16">
    <div class="flex items-center gap-2 mb-4">
      <div class="h-8 w-1 bg-primary rounded-full"></div>
      <h2 class="text-2xl font-bold text-gray-800">Current Conditions</h2>
    </div>
    <FieldWeather />
  </div>

  <section class="mb-16">
    <div class="flex items-center gap-2 mb-8">
      <div class="h-8 w-1 bg-primary rounded-full"></div>
      <h2 class="text-2xl font-bold text-gray-800">Field Features</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
        <div class="w-12 h-12 bg-blue-50 rounded-lg flex items-center justify-center text-primary mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-lg font-bold text-gray-900 mb-2">Paved Runway</h3>
        <p class="text-gray-600">
          Smooth asphalt runway perfect for all aircraft sizes, from micro-foamies to giant scale and turbines.
        </p>
      </div>

      <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
        <div class="w-12 h-12 bg-blue-50 rounded-lg flex items-center justify-center text-primary mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <h3 class="text-lg font-bold text-gray-900 mb-2">Charging Station</h3>
        <p class="text-gray-600">
          Covered shelter with solar-powered AC charging stations. Bring your chargers and keep flying all day.
        </p>
      </div>

      <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
        <div class="w-12 h-12 bg-blue-50 rounded-lg flex items-center justify-center text-primary mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
        </div>
        <h3 class="text-lg font-bold text-gray-900 mb-2">Covered Pit Area</h3>
        <p class="text-gray-600">
          Large covered pavilion for setup and socializing, with tables and safety fences to protect pilots.
        </p>
      </div>
    </div>
  </section>

  <section class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
    <div>
      <div class="flex items-center gap-2 mb-6">
        <div class="h-8 w-1 bg-primary rounded-full"></div>
        <h2 class="text-2xl font-bold text-gray-800">Location & Access</h2>
      </div>
      
      <div class="bg-white p-8 rounded-2xl shadow-md border border-gray-100">
        <h3 class="text-xl font-bold text-primary mb-4">OTX AeroDrome</h3>
        <p class="text-lg text-gray-700 font-medium mb-1">516 Tessentee Road</p>
        <p class="text-lg text-gray-700 font-medium mb-6">Otto, NC 28763</p>
        
        <div class="bg-gray-50 p-4 rounded-lg border border-gray-200 mb-6">
          <p class="text-sm text-gray-500 uppercase font-bold tracking-wider mb-1">GPS Coordinates</p>
          <p class="font-mono text-gray-800">35°03'46.9"N 83°22'59.9"W</p>
        </div>

        <p class="text-gray-600 leading-relaxed mb-6">
          The field is located just south of Franklin. The entrance is marked by a gate. 
          Please ensure the gate is closed and locked if you are the last member to leave.
        </p>

        <a 
          href="https://www.google.com/maps/dir//516+Tessentee+Rd,+Otto,+NC+28763" 
          target="_blank"
          class="inline-flex items-center justify-center w-full bg-primary text-white font-bold py-3 rounded-lg hover:bg-primary-hover transition-colors"
        >
          Open in Google Maps
        </a>
      </div>
    </div>

    <div class="rounded-2xl overflow-hidden shadow-lg border border-gray-200 min-h-[400px]">
       <iframe 
        src="https://maps.google.com/maps?q=35.063028,-83.383306&t=k&z=17&ie=UTF8&iwloc=&output=embed"
        width="100%" 
        height="100%" 
        style="border:0;" 
        allowfullscreen="" 
        loading="lazy" 
        referrerpolicy="no-referrer-when-downgrade">
      </iframe>
    </div>
  </section>

  <section class="bg-blue-50 rounded-2xl p-8 md:p-12 text-center border border-blue-100">
    <h2 class="text-3xl font-bold text-primary mb-4">Safety First</h2>
    <p class="text-gray-600 max-w-2xl mx-auto mb-8">
      To ensure the safety and enjoyment of all members, please review our field safety guidelines and operating rules before flying.
    </p>
    <a 
      href={`${import.meta.env.BASE_URL}docs/`} 
      class="inline-block bg-white text-primary border-2 border-primary font-bold py-3 px-8 rounded-lg hover:bg-blue-50 transition-colors"
    >
      Read Member Handbook
    </a>
  </section>

</Layout>