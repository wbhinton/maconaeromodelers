---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
const baseUrl = import.meta.env.BASE_URL;

// 1. Get all entries from the 'news' collection
const allPosts = await getCollection('news');

// 2. Sort them by date (newest first)
const sortedPosts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="Club News">
  <div class="bg-gradient-to-br from-primary to-secondary text-white py-12 px-4 rounded-2xl text-center mb-12 shadow-md">
    <h1 class="text-4xl font-bold mb-4">Club News & Updates</h1>
    <p class="text-xl text-blue-50">Latest newsletters, meeting minutes, and field reports</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {sortedPosts.map((post) => (
      <a href={`${baseUrl}news/${post.slug}`} class="block group">
        <article class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-all hover:-translate-y-1 h-full flex flex-col">
          <div class="p-6 flex flex-col flex-grow">
            <div class="text-sm text-primary font-bold mb-2">
              {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
            </div>
            <h2 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary transition-colors">
              {post.data.title}
            </h2>
            <p class="text-gray-600 mb-4 flex-grow">
              {post.data.description}
            </p>
            <div class="text-sm text-gray-400 mt-auto pt-4 border-t border-gray-100">
              Posted by {post.data.author}
            </div>
          </div>
        </article>
      </a>
    ))}
  </div>
</Layout>