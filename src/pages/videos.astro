---
import Layout from '../layouts/Layout.astro';

// REPLACE THIS with your specific Playlist ID (Change the 'UC' in your Channel ID to 'UU')
// Current ID is for Louis Vitale's channel which has many Macon Aero Modeler videos.
const PLAYLIST_ID = "UUy5OGJfxp4gos5WnEADppSw"; 

const CHANNEL_URL = "https://www.youtube.com/@44RAILGUY"; // Update this to your new channel URL
---

<Layout title="Club Videos | Macon Aero Modelers">
  
  <div class="relative bg-gray-900 text-white py-16 px-4 rounded-b-3xl md:rounded-2xl mb-12 shadow-xl overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img 
        src={`${import.meta.env.BASE_URL}assets/images/hero3.jpg`} 
        alt="Videos" 
        class="w-full h-full object-cover opacity-30" 
      />
      <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent to-transparent"></div>
    </div>
    <div class="relative z-10 text-center max-w-4xl mx-auto mt-4">
      <h1 class="text-3xl md:text-5xl font-bold mb-2 drop-shadow-lg">Club Videos</h1>
      <p class="text-lg text-gray-300 drop-shadow-md">Flight demos, events, and highlights.</p>
    </div>
  </div>

  <div class="max-w-4xl mx-auto px-4 mb-16">
    
    <div class="bg-white p-2 md:p-4 rounded-2xl shadow-lg border border-gray-200 mb-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-4 px-2">Latest Upload</h2>
      
      <div class="aspect-video w-full rounded-xl overflow-hidden bg-black relative">
        <iframe 
          class="absolute inset-0 w-full h-full"
          src={`https://www.youtube.com/embed/videoseries?list=${PLAYLIST_ID}`}
          title="Latest Macon Aero Modelers Video"
          frameborder="0" 
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
          allowfullscreen
        ></iframe>
      </div>
      
      <p class="text-sm text-gray-500 mt-3 px-2 italic">
        * This player automatically updates with our newest video.
      </p>
    </div>

    <div class="text-center py-12 bg-gray-50 rounded-2xl border border-dashed border-gray-300">
      <h3 class="text-xl font-bold text-gray-800 mb-2">Want to see more?</h3>
      <p class="text-gray-600 mb-6 max-w-lg mx-auto">
        Visit our official YouTube channel to browse the full archive of flight videos, tutorials, and event recaps.
      </p>
      
      <a 
        href={CHANNEL_URL} 
        target="_blank"
        class="inline-flex items-center gap-2 bg-[#FF0000] text-white px-6 py-3 rounded-full font-bold hover:bg-red-700 transition-transform hover:scale-105 shadow-md"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/></svg>
        Subscribe on YouTube
      </a>
    </div>

  </div>
</Layout>