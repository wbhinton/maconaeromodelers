---
import Layout from '../layouts/Layout.astro';
import GalleryNav from '../components/GalleryNav.astro';
import fs from 'node:fs';
import path from 'node:path';

// ==================================================================
// CONFIGURATION
// ==================================================================
const CURRENT_YEAR = "2025"; 

// Replace this with your actual YouTube Playlist ID
const playlistId = "PLDeRW7LNQl1eiLRtiiwcrvPEkX99St1K7";

// 1. Define the Shape of an Album (TypeScript Interface)
interface Album {
  title: string;
  date: string;
  coverUrl: string | null;
  link: string;
  count: number;
}

// ==================================================================
// SERVER SIDE LOGIC
// ==================================================================
const baseDir = path.join(process.cwd(), 'public', 'assets', 'gallery', CURRENT_YEAR);

// 2. Explicitly type the array using the Interface
let albums: Album[] = [];

try {
  if (fs.existsSync(baseDir)) {
    const eventFolders = fs.readdirSync(baseDir).filter(f => 
      fs.statSync(path.join(baseDir, f)).isDirectory()
    );

    albums = eventFolders.map((slug): Album => {
      const eventPath = path.join(baseDir, slug);
      let meta = { title: slug, date: CURRENT_YEAR, description: "", cover: "" };
      
      try {
        const jsonPath = path.join(eventPath, 'info.json');
        if (fs.existsSync(jsonPath)) {
          meta = JSON.parse(fs.readFileSync(jsonPath, 'utf-8'));
        }
      } catch (e) {
        // Ignore JSON errors
      }

      let coverImage = meta.cover;
      let photoCount = 0;
      
      try {
        const files = fs.readdirSync(eventPath);
        const images = files.filter(f => /\.(jpg|jpeg|png|webp)$/i.test(f));
        photoCount = images.length;

        if (!coverImage && images.length > 0) {
          coverImage = images[0];
        }
      } catch (e) {
        photoCount = 0;
      }

      return {
        title: meta.title || slug,
        date: meta.date || CURRENT_YEAR,
        coverUrl: coverImage 
          ? `${import.meta.env.BASE_URL}assets/gallery/${CURRENT_YEAR}/${slug}/${coverImage}`
          : null, 
        link: `${import.meta.env.BASE_URL}gallery/${CURRENT_YEAR}/${slug}/`,
        count: photoCount
      };
    }).filter(album => album.count > 0);
  }
} catch (e) {
  console.error("Error scanning gallery directory:", e);
}
---

<Layout title={`Media Gallery - ${CURRENT_YEAR} Season`}>
  <div class="relative bg-gray-900 text-white py-16 px-4 rounded-b-3xl md:rounded-2xl mb-12 shadow-xl overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img 
        src={`${import.meta.env.BASE_URL}assets/images/hero3.jpg`} 
        alt="Media Gallery" 
        class="w-full h-full object-cover opacity-40" 
      />
      <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent to-transparent"></div>
    </div>
    
    <div class="relative z-10 text-center max-w-4xl mx-auto mt-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 drop-shadow-lg">Media Gallery</h1>
      <p class="text-xl md:text-2xl text-gray-200 max-w-2xl mx-auto drop-shadow-md">
        Highlights from the {CURRENT_YEAR} flight line.
      </p>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 mb-16">
    <GalleryNav />

    <h2 class="text-2xl font-bold text-gray-800 mb-6 border-l-4 border-primary pl-4">
      {CURRENT_YEAR} Albums
    </h2>

    {albums.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {albums.map((album) => (
          <a href={album.link} class="group block bg-white rounded-xl overflow-hidden shadow-sm border border-gray-100 hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="aspect-[4/3] overflow-hidden bg-gray-200 relative">
              {album.coverUrl ? (
                <img 
                  src={album.coverUrl} 
                  alt={album.title} 
                  class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center text-gray-400">
                  <span>No Image</span>
                </div>
              )}
              <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors"></div>
              <div class="absolute bottom-3 right-3 bg-black/60 text-white text-xs font-bold px-2 py-1 rounded backdrop-blur-sm">
                ðŸ“· {album.count} Photos
              </div>
            </div>
            <div class="p-5">
              <h3 class="font-bold text-lg text-gray-900 group-hover:text-primary transition-colors mb-1">{album.title}</h3>
              <p class="text-sm text-gray-500">{album.date}</p>
            </div>
          </a>
        ))}
      </div>
    ) : (
      <div class="text-center py-20 bg-gray-50 rounded-2xl border border-dashed border-gray-300">
        <div class="text-6xl mb-4">ðŸ“‚</div>
        <h3 class="text-xl font-bold text-gray-600 mb-2">No Albums Yet</h3>
        <p class="text-gray-500 max-w-md mx-auto">
          We haven't uploaded any photos for {CURRENT_YEAR} yet. 
          Check back after our next event!
        </p>
      </div>
    )}

    {/* 
    === FEATURED VIDEO PLAYLIST ===
    */}
    <div class="w-full max-w-5xl mx-auto mb-16 mt-16">
      <h2 class="text-2xl font-bold text-gray-800 mb-6 border-l-4 border-primary pl-4">
        Featured Flights
      </h2>
      <div class="aspect-video w-full overflow-hidden rounded-xl shadow-lg border border-slate-200 bg-gray-900">
        <iframe
          class="w-full h-full"
          src={`https://www.youtube.com/embed/videoseries?list=${playlistId}&rel=0`}
          title="Macon Aero Modelers Featured Flights"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
      </div>
    </div>

  </div>
</Layout>