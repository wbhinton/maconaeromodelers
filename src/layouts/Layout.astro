---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Macon Aero Modelers - A model airplane flying club" } = Astro.props;

const baseUrl = import.meta.env.BASE_URL;

const joinPath = (path: string) => {
  const cleanBase = baseUrl.endsWith('/') ? baseUrl : `${baseUrl}/`;
  const cleanPath = path.startsWith('/') ? path.slice(1) : path;
  return `${cleanBase}${cleanPath}`;
}

const navItems = [
  { text: "Home", href: joinPath('') },
  { text: "The Field", href: joinPath('field-info/') }, 
  { text: "Events", href: joinPath('events/') },
  { text: "Gallery", href: joinPath('gallery/') },
  { 
    text: "Membership", 
    href: "#", 
    subItems: [
      { text: "Join the Club", href: joinPath('new-members/') },
      { text: "Member Handbook", href: joinPath('docs/') },
      { text: "Pilot Resources", href: joinPath('resources/') },
    ]
  },
  { text: "Contact", href: joinPath('contact/') },
];
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={joinPath('favicon.svg')} />
    <title>{title} | Macon Aero Modelers</title>
  </head>
  
  <body class="bg-background text-text-dark antialiased min-h-screen flex flex-col font-sans">
    
    <header class="bg-background border-b border-gray-200 sticky top-0 z-50 shadow-sm">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between relative">
        
        <a href={joinPath('')} class="text-xl font-bold text-primary flex items-center gap-2 hover:opacity-80 transition-opacity z-50">
          <span class="text-2xl">✈️</span> Macon Aero Modelers
        </a>

        <button 
          id="mobile-menu-btn"
          class="md:hidden text-text-dark hover:text-primary p-2 focus:outline-none z-50"
          aria-label="Toggle menu"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>

        <ul 
          id="nav-links"
          class="
            hidden 
            absolute top-16 left-0 w-full bg-white border-b border-gray-200 shadow-lg flex-col p-6 gap-2
            md:flex md:static md:w-auto md:bg-transparent md:border-none md:shadow-none md:flex-row md:items-center md:p-0 md:gap-6
          "
        >
          {navItems.map((item) => (
            <li class="relative group">
              {item.subItems ? (
                /* DROPDOWN MENU ITEM */
                <>
                  <button 
                    id="membership-btn" 
                    class="w-full text-left md:w-auto flex items-center justify-between gap-1 text-text-dark font-medium hover:text-primary py-2 md:py-1 group-hover:text-primary transition-colors cursor-pointer"
                  >
                    {item.text}
                    {/* Arrow Icon that rotates when group is hovered (Desktop) or manually via JS (Mobile) */}
                    <svg id="membership-arrow" class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                  </button>
                  
                  {/* Dropdown Content */}
                  {/* FIX: 
                      1. Changed base class to 'hidden' (closed by default on mobile).
                      2. Added 'flex-col' for layout.
                      3. Kept 'md:absolute' for desktop positioning.
                      4. Added ID 'membership-menu' for the JS to find it.
                  */}
                  <ul 
  id="membership-menu"
  class="
  hidden flex-col pl-4 mt-2 border-l-2 border-gray-100 space-y-2 bg-white w-full
  md:hidden md:absolute md:left-0 md:top-full md:w-56 md:shadow-xl md:border md:rounded-md 
  md:pl-0 md:border-l-0 md:mt-0 md:pt-2 md:pb-2
  group-hover:flex z-50
">
                    {item.subItems.map((sub) => (
                      <li>
                        <a 
                          href={sub.href} 
                          class="block text-sm text-gray-700 hover:text-primary md:px-4 md:py-2 md:hover:bg-gray-50 transition-colors"
                        >
                          {sub.text}
                        </a>
                      </li>
                    ))}
                  </ul>
                </>
              ) : (
                /* STANDARD NAV ITEM */
                <a 
                  href={item.href} 
                  class="block text-text-dark font-medium hover:text-primary border-b-2 border-transparent hover:border-primary transition-colors py-2 md:py-1"
                >
                  {item.text}
                </a>
              )}
            </li>
          ))}
        </ul>

      </nav>
    </header>

    <main class="flex-grow max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>

    <footer class="bg-text-dark text-white mt-12 py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 grid grid-cols-1 md:grid-cols-3 gap-8">
        
<div>
          <h3 class="text-alert font-semibold text-lg mb-4">About Us</h3>
          <p class="text-gray-300 leading-relaxed mb-6">
            Macon Aero Modelers is a community of model airplane enthusiasts dedicated to the hobby of radio-controlled aviation.
          </p>
          
          <a href="https://www.modelaircraft.org/" target="_blank" rel="noopener noreferrer" class="inline-block">
            <img 
              src={`${import.meta.env.BASE_URL}assets/images/ama-logo.svg`} 
              alt="AMA Charter Club" 
              class="h-20 w-auto opacity-90 hover:opacity-100 transition-opacity"
            />
          </a>
        </div>

        <div>
          <h3 class="text-alert font-semibold text-lg mb-4">Quick Links</h3>
          <ul class="space-y-2">
            <li><a href={joinPath('new-members/')} class="text-gray-300 hover:text-alert transition-colors">Join Our Club</a></li>
            <li><a href={joinPath('events/')} class="text-gray-300 hover:text-alert transition-colors">Upcoming Events</a></li>
            <li><a href={joinPath('docs/')} class="text-gray-300 hover:text-alert transition-colors">Member Handbook</a></li>
            <li><a href={joinPath('contact/')} class="text-gray-300 hover:text-alert transition-colors">Contact Us</a></li>
          </ul>
        </div>
        <div>
          <h3 class="text-alert font-semibold text-lg mb-4">Connect</h3>
          <ul class="space-y-2">
            <li><a href="https://www.facebook.com/MaconAeroModelers" class="flex items-center gap-2 text-gray-300 hover:text-alert transition-colors">Facebook</a></li>
            <li><a href="https://www.youtube.com/channel/UCy5OGJfxp4gos5WnEADppSw" class="flex items-center gap-2 text-gray-300 hover:text-alert transition-colors">YouTube</a></li>
          </ul>
        </div>
      </div>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-12 pt-8 border-t border-gray-700 text-center text-gray-400">
        <p>&copy; {new Date().getFullYear()} Macon Aero Modelers. All rights reserved.</p>
      </div>
    </footer>

    <script>
      // 1. Mobile Hamburger Menu Logic
      const btn = document.getElementById('mobile-menu-btn');
      const menu = document.getElementById('nav-links');

      if (btn && menu) {
        btn.addEventListener('click', () => {
          menu.classList.toggle('hidden');
          menu.classList.toggle('flex');
        });
      }

      // 2. Mobile Membership Dropdown Logic
      const memBtn = document.getElementById('membership-btn');
      const memMenu = document.getElementById('membership-menu');
      const memArrow = document.getElementById('membership-arrow');

      if (memBtn && memMenu) {
        memBtn.addEventListener('click', (e) => {
          // Prevent the click from bubbling up if necessary, though not strictly needed here
          e.stopPropagation();
          
          // Toggle the visibility classes
          memMenu.classList.toggle('hidden');
          memMenu.classList.toggle('flex');
          
          // Rotate the arrow icon
          if (memArrow) {
             memArrow.classList.toggle('rotate-180');
          }
        });
      }
    </script>
  </body>
</html>